; AGS2 run script
; ---------------
;RunFile=A-Magazines:C/CrackerJournal13/CrackerJournal13.Slave

; Favourites Mode
IF EXISTS ENV:ags2favouritesmode
  execute S:AGS2Favourites "C" "Cracker Journal 13 - Alpha"
  IF $ags2favouritesmode EQ "add"
    SKIP end
  ENDIF
  IF $ags2favouritesmode EQ "remove"
    SKIP end
  ENDIF
ENDIF

; Start AGS2 Run Pre Script, if it exists
IF EXISTS S:AGS2RunPre
  execute S:AGS2RunPre
ENDIF

; Run WHDLoad
cd "A-Magazines:C/CrackerJournal13/"
IF EXISTS ENV:whdloadargs
  whdload "CrackerJournal13.Slave" $whdloadargs
ELSE
  whdload "CrackerJournal13.Slave"
ENDIF

; Start AGS2 Run Post Script, if it exists
IF EXISTS S:AGS2RunPost
  execute S:AGS2RunPost
ENDIF

; End
LAB end
